{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
		"jquery": true,
		"jest": true
    },
	"plugins": [
		"html"
	],
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
		"sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab",
			{
				"SwitchCase": 1
			}
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
		"prefer-const": [
			"error",
			{
				"destructuring": "all"
			}
		]
    }
}